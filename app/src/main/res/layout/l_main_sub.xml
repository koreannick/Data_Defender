<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_main_matching"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="title"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_default"
            app:font="custom4"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="title_sub"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_default_2"
            app:font="custom3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.gelitenight.waveview.library.WaveView
                android:id="@+id/wave"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical" />

            <TextView
                android:id="@+id/txt_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="50%"
                android:textColor="@color/text_default"
                android:textSize="30sp"
                app:font="custom1" />

            <TextView
                android:id="@+id/tv_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_percent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="일 데이터 사용량"
                android:textColor="@color/text_default_2"
                android:textSize="12sp"
                app:font="custom3" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="2dp"
                android:background="@color/app_default_1"
                android:layout_height="50dp"
                />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_1"
                android:text="30%"
                android:textColor="@color/text_default"
                android:textSize="18sp"
                app:font="custom4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_1"
                android:text="가나다라마바사"
                android:textColor="@color/text_default_2"
                android:textSize="10sp"
                app:font="custom3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@color/app_default_1" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_2"
                android:text="30%"
                android:textColor="@color/text_default"
                android:textSize="18sp"
                app:font="custom4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_2"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_2"
                android:text="가나다라마바사"
                android:textColor="@color/text_default_2"
                android:textSize="10sp"
                app:font="custom3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@color/app_default_1" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_3"
                android:text="30%"
                android:textColor="@color/text_default"
                android:textSize="18sp"
                app:font="custom4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_3"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_3"
                android:text="가나다라마바사"
                android:textColor="@color/text_default_2"
                android:textSize="10sp"
                app:font="custom3" />
        </RelativeLayout>
    </LinearLayout>
